<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF2EF"
    android:orientation="vertical"
    tools:context=".activity.Soul_Guru">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/soul_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <soup.neumorphism.NeumorphTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Your"
                android:textColor="@color/black"
                android:textSize="26dp"
                android:textStyle="bold" />

            <soup.neumorphism.NeumorphTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy Place!"
                android:textColor="@color/black"
                android:textSize="36dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:layout_marginRight="20dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="40dp"
                app:cardCornerRadius="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@drawable/gradient_drawable">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help?"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

                </RelativeLayout>





            </androidx.cardview.widget.CardView>





        </LinearLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="yoga.json"
        app:lottie_loop="true" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <soup.neumorphism.NeumorphTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="SoulGuru Pack "
                android:textColor="@color/black"
                android:textSize="26dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <soup.neumorphism.NeumorphCardView
                        style="@style/Widget.Neumorph.CardView"
                        android:layout_width="170dp"
                        android:layout_height="210dp"
                        android:background="#FFF2CC">


                        <LinearLayout
                            android:id="@+id/btn_soul"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#b9b2dc"
                            android:gravity="center"
                            android:orientation="vertical">



                            <TextView
                                android:id="@+id/COprice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 500/-"
                                android:textColor="@color/black"
                                android:textSize="26dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 100/-"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="One Time "
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        style="@style/Widget.Neumorph.CardView"
                        android:layout_width="170dp"
                        android:layout_height="210dp">


                        <LinearLayout
                            android:id="@+id/btn_game"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#a6dae8"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/COprice3M"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 1299/-"
                                android:textColor="@color/black"
                                android:textSize="26dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 600/-"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="3M Pack"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        style="@style/Widget.Neumorph.CardView"
                        android:layout_width="170dp"
                        android:layout_height="210dp">

                        <LinearLayout
                            android:id="@+id/btn_blog"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#e098d0"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/COprice6M"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 1599/-"
                                android:textColor="@color/black"
                                android:textSize="26dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 800/-"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="6M Pack"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        style="@style/Widget.Neumorph.CardView"
                        android:layout_width="170dp"
                        android:layout_height="210dp">


                        <LinearLayout
                            android:id="@+id/btn_story"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#fce4bc"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/COprice12M"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 2199/-"
                                android:textColor="@color/black"
                                android:textSize="26dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Rs 1200/-"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Yearly Pack"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </soup.neumorphism.NeumorphCardView>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</LinearLayout>


