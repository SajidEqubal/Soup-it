<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">


    <LinearLayout

        android:id="@+id/Lay_Story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="350dp"
            app:cardCornerRadius="20dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="top|center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white"
                    >


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="20dp">



                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            android:background="#f3f3f3"
                            android:layout_gravity="center"
                            app:lottie_fileName="imageLoading.json"/>



                        <ImageView
                            android:id="@+id/SS_Image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            />





                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/SS_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="The Wise Man"
                        android:textColor="@color/black"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="12dp"
                            android:text="â—"
                            android:textColor="#FD9297"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/SS_Written"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:text=" by Shad  "
                            android:textColor="#FD9297"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/SS_Date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10 min ago   "
                            android:textColor="#FD9297"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            />


                        <TextView
                            android:id="@+id/SS_Story"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            />






                    </RelativeLayout>




                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/grey"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">



                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            app:lottie_autoPlay="true"
                            app:lottie_fileName="like.json"
                            app:lottie_loop="true" />




                        <TextView
                            android:id="@+id/tv_read"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="50dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Read Now"
                            />




                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/right"
                            />


                    </RelativeLayout>






                </LinearLayout>

            </LinearLayout>





        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>