<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Lay_Story"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_card"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/YS_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="●  My Real Life"
                android:textColor="@color/ReviewTitle"
                android:maxLength="40"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/YS_Story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Hi there,this is the demo story i write on soupit app thats i want to say i am glade to say "
                android:textColor="@color/black"
                android:maxLength="80"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/YS_Name"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Decline with customers objections"
                android:textColor="@color/fab_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/YS_Phone"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Decline with customers objections"
                android:textColor="@color/fab_white"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/YS_Type"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:text="Decline with customers objections"
                android:textColor="@color/fab_white"
                android:textSize="16sp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/YS_Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="Status : Under Review"
                    android:textColor="#6A1B4D"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/YS_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:text="●  10 min ago   "
                    android:textColor="#E8BD0D"
                    android:textSize="14sp" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>